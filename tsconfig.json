{
  "compilerOptions": {                      
    "lib": ["dom","dom.iterable","esnext"],       // Especifica quais as bibliotecas que o TS vai usar
    "jsx": "react-jsx",                           // Indica que o TS vai usar o JSX    
    "moduleResolution": "node", 
    "resolveJsonModule": true,                    // Adiciona a possibilidade de importar arquivos JSON
	  "allowJs": true,                              // Permite que o TS compilador ou transpile para javascript
    "noEmit": false,                              // Desativamos por que estamos usando o ts-loader
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                               // Indica que o TS vai usar o strict mode
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": "src",                             // Indica o diretório raiz do projeto
    "paths": {                                    // caminho para os arquivos com alias
      "@/*": ["*"],
    },
  },
"include": ["src"],                               // Indica que o TS vai compilar todos os arquivos que estão dentro da pasta src
}